[#include parts/header]

<div class="wrapper">
    <div class="main-panel" style="width: 100%;">
		<nav class="navbar navbar-expand-lg navbar-absolute fixed-top navbar-transparent">
			<div class="container-fluid">
				<div class="navbar-wrapper">
					<div class="navbar-toggle">
						<button type="button" class="navbar-toggler">
							<span class="navbar-toggler-bar bar1"></span>
							<span class="navbar-toggler-bar bar2"></span>
							<span class="navbar-toggler-bar bar3"></span>
						</button>
					</div>
					<a class="navbar-brand" href="">[title]</a>
				</div>

				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navigation" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-bar navbar-kebab"></span>
					<span class="navbar-toggler-bar navbar-kebab"></span>
					<span class="navbar-toggler-bar navbar-kebab"></span>
				</button>

				
			</div>
		</nav>
		
		<div class="content">
			<div class="row">
          		<div class="col-md-4" style="margin: 0 auto;">
					<div class="card card-user">
						<div class="card-header">
							<h5 class="card-title">ავტორიზაცია</h5>
						</div>
						<div class="card-body">
							<form action="" method="post"> <!-- /ge/ajax/ajax_users -->
								<div class="row">
									<div class="col-md-12 messageBox">
									</div>
									<div class="col-md-12">
										<div class="form-group">
											<label>მომხმარებლის სახელი</label>
											<input type="text" name="username" class="form-control username" value="" autocomplete="off" />
										</div>
									</div>
									<div class="col-md-12">
										<div class="form-group">
											<label>პაროლი</label>
											<input type="password" name="password" class="form-control password" value="" />
										</div>
									</div>

									<div class="col-md-6">
										<div class="form-group">
											<label>დამცავი კოდი</label>
											<input type="text" name="code" class="form-control code" autocomplete="off" />
										</div>
									</div>
									<div class="col-md-6">
										<div class="form-group">
											<img src="/captcha.php" alt="" style="width:150px; margin: 15px 0 0 0; float: left;" />
										</div>
									</div>
									
								</div>

								<div class="row">
									<div class="update ml-auto mr-auto">
										<button type="button" class="btn btn-primary btn-round g-signin">შესვლა</button>
									</div>
								</div>
							</form>
						</div>
					</div>
				</div>
				<div style="width: 100%; clear:both;"></div>
				<div class="col-md-4" style="margin: 0 auto;">
                  <button class="btn btn-primary btn-round btn-block" onclick="location.href='/[language]/register/index'">რეგისტრაცია</button>
                </div>
			</div>
		</div>

		[#include parts/topFooter]
	</div>
</div>

<script type="text/javascript">
var Config = {
	ajax:"/[language]/ajax",
	language:"[language]"
};
</script>
<script type="text/javascript" charset="utf-8" src="/js/home.js"></script>

[#include parts/footer]