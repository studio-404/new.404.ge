[#include parts/header]

<div class="wrapper">
    <div class="sidebar" data-color="white" data-active-color="danger">
      	<div class="logo">
			<a href="/" class="simple-text logo-mini">
				<div class="logo-image-small">
					<img src="/img/logo-small.png">
				</div>
			</a>
			<a href="/" class="simple-text logo-normal">
				[mainName]
			</a>
		</div>


		[#include parts/leftNav]
	</div>

	<div class="main-panel">
		[#include parts/topNav]
		<!-- End Navbar -->
		
		<div class="content">
			<div class="row">
				<div class="col-md-6">
					<div class="card card-user">
						<div class="card-header">
							<h5 class="card-title">პროფილის რედაქტირება</h5>
						</div>
						<div class="card-body">
							[profile_form]							
						</div>
					</div>
				</div>

				<div class="col-md-6">
					<div class="card card-user">
						<div class="card-header">
							<h5 class="card-title">პაროლის განახლება</h5>
						</div>
						<div class="card-body">
							<form>
							  
								<div class="row">
								
								<div class="col-md-12">
									<div class="form-group">
										<label>ძველი პაროლი</label>
										<input type="password" class="form-control" />
									</div>
								</div>

								<div class="col-md-12">
									<div class="form-group">
										<label>ახალი პაროლი</label>
										<input type="password" class="form-control" />
									</div>
								</div>

								<div class="col-md-12">
									<div class="form-group">
										<label>დაადასტურეთ პაროლი</label>
										<input type="password" class="form-control" />
									</div>
								</div>

								</div>

								<div class="row">
									<div class="update ml-auto mr-auto">
										<button type="submit" class="btn btn-primary btn-round">განახლება</button>
									</div>
								</div>

							</form>
						</div>
					</div>
				</div>
			</div>
		</div>

		[#include parts/topFooter]
	</div>
</div>

[#include parts/footer]